configuration {
    show-icons: true;
}

* {
    text-color: #d3d7cf;
    //text-color:  #839496;
    background-color:  rgba(0,0,0,0);
    dark: #073642;
    // Black
    black:       #002b36;
    lightblack:  #073642;
    //
    // Red
    red:         #dc322f;
    lightred:    #cb4b16;
    //
    // Green
    green:       #859900;
    lightgreen:  #586e75;
    //
    // Yellow
    yellow:          #B58900;
    lightyellow:     #657b83;
    //
    // Blue
    blue:          #268b2d;
    lightblue:     #839496;
    //
    // Magenta
    magenta:          #d33682;
    lightmagenta:     #6c71c4;
    //
    // Cyan
    cyan:          #b0c4de;
    lightcyan:     #b0c4de;
    //
    // White
    white:          #eee8d5;
    lightwhite:     #fdf6e3;
    //
    // Bold, Italic, Underline
    highlight:     bold #93a1a1;
}

//configuration {
